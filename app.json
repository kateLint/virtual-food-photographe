{
  "expo": {
    "name": "Virtual Food Photographer",
    "slug": "virtual-food-photographer",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "dark",
    "scheme": "virtualfoodphotographer",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "cover",
      "backgroundColor": "#111827"
    },
    "jsEngine": "hermes",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.virtualfoodphotographer.app",
      "icon": "./assets/icon.png",
      "splash": {
        "image": "./assets/splash.png",
        "resizeMode": "cover",
        "backgroundColor": "#111827"
      },
      "infoPlist": {
        "NSPhotoLibraryAddUsageDescription": "This app needs access to your photo library to save your favorite food photos.",
        "NSPhotoLibraryUsageDescription": "This app needs access to your photo library to save your favorite food photos.",
        "NSCameraUsageDescription": "This app needs access to your camera to scan menu photos and extract text."
      }
    },
    "android": {
      "package": "com.virtualfoodphotographer.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#111827"
      },
      "splash": {
        "image": "./assets/splash.png",
        "resizeMode": "cover",
        "backgroundColor": "#111827"
      },
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router"
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id"
      },
      "supportsRTL": false
    }
  }
}
